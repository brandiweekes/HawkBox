<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crawl.Views.HomePage">
  <ContentPage.Content>
    <ScrollView>
      <AbsoluteLayout Padding="15">
        
        
        <Label Text="MiBliens" FontSize="Large" FontAttributes="Bold"
               AbsoluteLayout.LayoutFlags="All, XProportional" AbsoluteLayout.LayoutBounds="0.6, .65, .4, .1" />
        <Label Text="Let the intergalactic battle begin!" FontSize="Medium" FontAttributes="Bold" TextColor="{DynamicResource LightBackgroundColor}"
               AbsoluteLayout.LayoutFlags="All, XProportional" AbsoluteLayout.LayoutBounds="0.5, .75, .8, .1" />
        <Button Text="AutoBattle" FontSize="Small" Clicked="OnAutoBattleClicked"
                AbsoluteLayout.LayoutFlags="All, XProportional" AbsoluteLayout.LayoutBounds="0, 1, .3, .1" />
        <Button Text="Battle" Clicked="OnBattleClicked"
                AbsoluteLayout.LayoutFlags="All, XProportional" AbsoluteLayout.LayoutBounds="1, 1, .3, .1" />
      </AbsoluteLayout>
    </ScrollView>




  </ContentPage.Content>
</ContentPage>